<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="68pt"
        android:text="ALTAS"
        android:textColor="#3BD4AE"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="40pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clave:"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/clave" />
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="40pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Libro:"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/nomL" />
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="40pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Autor:"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/nomA" />
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="40pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero:"
            android:textSize="17dp"/>

        <RadioButton
            android:id="@+id/masc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M" />

        <RadioButton
            android:id="@+id/fem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="F" />

        <RadioButton
            android:id="@+id/otro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O" />

    </GridLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="40pt"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/gen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </GridLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="15dp"
        android:text="Pasta Dura" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="10dp"
        android:text="Pasta Blanda" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:layout_marginLeft="35pt"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:backgroundTint="#3BD4AE"
            android:textSize="8pt"
            android:text="Agregar" />

        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25pt"
            android:textColor="@android:color/background_light"
            android:backgroundTint="#3BD4AE"
            android:textSize="8pt"
            android:text="Regresar" />

    </GridLayout>



</LinearLayout>
