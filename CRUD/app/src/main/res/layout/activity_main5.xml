<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/musica"
        android:scaleType="centerCrop" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity4">

        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50pt"
            android:text="Buscar canciÃ³n"
            android:textColor="@color/white"
            android:textSize="32dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginStart="32pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Clave:"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buscClave" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:layout_marginLeft="32pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Nombre de la cancion:"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:id="@+id/buscTitulo" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3pt"
            android:layout_marginLeft="32pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Autor:"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:id="@+id/buscAutor" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3pt"
            android:layout_marginLeft="65dp"
            android:orientation="horizontal">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/buscombito"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/buscombito2"/>
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:layout_marginStart="30pt"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonInicia"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3BD4AE"
                android:textColor="#737373"
                android:textSize="8pt"
                android:text="Buscar"/>
            <Button
                android:id="@+id/buttonRegresa"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:backgroundTint="#3BD4AE"
                android:textColor="#737373"
                android:textSize="8pt"
                android:text="Regresar"/>
        </GridLayout>

    </LinearLayout>
</FrameLayout>